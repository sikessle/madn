<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
   "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
   <session-factory>
      <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <property name="connection.url">jdbc:mysql://lenny2.in.htwg-konstanz.de:3306/games?createDatabaseIfNotExist=true</property>
      <property name="connection.username">htwg</property>
      <property name="connection.password">htwg</property>
      <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
      <property name="current_session_context_class">thread</property>
      <property name="hibernate.hbm2ddl.auto">update</property>
      <property name="show_sql">false</property>
      <mapping class="de.htwg.madn.model.hibernate.PersistenceBoard" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistenceDice" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistenceFigure" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistenceFinishField" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistenceGameId" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistenceGameSettings" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistenceHomeField" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistencePlayer" />
	  <mapping class="de.htwg.madn.model.hibernate.PersistencePublicField" />
      
   </session-factory>
</hibernate-configuration>